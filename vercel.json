{
  "version": 2,
  "name": "contrato-claro-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://contrato-claro-backend-production.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://contrato-claro-backend-production.up.railway.app"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}
